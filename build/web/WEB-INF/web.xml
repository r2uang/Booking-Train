<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>controller.auth.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HomeController</servlet-name>
        <servlet-class>controller.home.HomeController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BookingController</servlet-name>
        <servlet-class>controller.booking.BookingController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutController</servlet-name>
        <servlet-class>controller.auth.LogoutController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>JourneysController</servlet-name>
        <servlet-class>controller.journey.JourneysController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegisterController</servlet-name>
        <servlet-class>controller.account.RegisterController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TrainController</servlet-name>
        <servlet-class>controller.train.TrainController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>JourneysBookingController</servlet-name>
        <servlet-class>controller.journey.JourneysBookingController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TrainSeatController</servlet-name>
        <servlet-class>controller.train.TrainSeatController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/account/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HomeController</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BookingController</servlet-name>
        <url-pattern>/book/booking</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutController</servlet-name>
        <url-pattern>/account/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>JourneysController</servlet-name>
        <url-pattern>/journeys/list</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegisterController</servlet-name>
        <url-pattern>/account/register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TrainController</servlet-name>
        <url-pattern>/train/book</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>JourneysBookingController</servlet-name>
        <url-pattern>/journeys/book</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TrainSeatController</servlet-name>
        <url-pattern>/train/seat</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
